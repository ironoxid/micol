<div class="col-lg-9">
  <%- model_class = Category -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human(count: 2).titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:color) %></th>
        <th><%= model_class.human_attribute_name(:relevant_days) %></th>
        <th><%= model_class.human_attribute_name(:forewarn_days) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category.id, category_path(category) %></td>
          <td><%= category.name %></td>
          <td><%= category.color %></td>
          <td><%= category.relevant_days %></td>
          <td><%= category.forewarn_days %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_category_path(category), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        category_path(category),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new_category", :default => 'New category')),
              new_category_path,
              :class => 'btn btn-primary' %>
</div>
<div class="col-lg-3">
  <div class="page-header">
    <h3 class="preview-title"><%= t('titles.preview') %></h3>
  </div>
  <div class="well">
  </div>
</div>
