<div class="col-lg-9">
  <%- model_class = Deadline -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human(count: 2).titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:category_id) %></th>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th><%= model_class.human_attribute_name(:deadline_date) %></th>
        <th><%= t('.status') %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @deadlines.each do |deadline| %>
        <tr>
          <td><%= link_to deadline.id, deadline_path(deadline) %></td>
          <td><%= deadline.name %></td>
          <td><%= deadline.category_id %></td>
          <td><%= deadline.user_id %></td>
          <td><%= deadline.deadline_date %></td>
          <td></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_deadline_path(deadline), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        deadline_path(deadline),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new-deadline", default: "New deadline")),
              new_deadline_path,
              :class => 'btn btn-primary' %>
</div>
<div class="col-lg-3">
  <div class="page-header">
    <h3 class="preview-title"><%= t('titles.preview') %></h3>
  </div>
  <div class="well">
  </div>
</div>
