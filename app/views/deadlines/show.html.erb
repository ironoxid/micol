<%- model_class = Deadline -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @deadline.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @deadline.category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @deadline.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deadline_date) %>:</strong></dt>
  <dd><%= @deadline.deadline_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:completed) %>:</strong></dt>
  <dd><%= @deadline.completed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:references) %>:</strong></dt>
  <dd><%= @deadline.references %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @deadline.note %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              deadlines_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_deadline_path(@deadline), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              deadline_path(@deadline),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
